<% content_for :breadcrumb do %>
  <%= link_to "Identiteit", identity_path %>
<% end %>

<h1>Identiteit van deze Antorcha</h1>

<%= render :partial => 'introductie' %>

<% if @identity %>
  <h2>De identiteit van deze Antorcha is vastgesteld via het volgende certificaat:</h2>

  <p>
    <%=h @identity.organization.title %>
  </p>

  <div class="actions">
    <%= link_to 'Verwijder de identiteitsvaststelling van deze Antorcha', identity_path, :method => :delete, :confirm => 'Communicatie wordt onmogelijk na het verwijderen van de identiteit. Weet u het zeker?' %>
  </div>
  
<% else %>
  <h2>Er is geen identiteit voor deze Antorcha gedefinieerd.</h2>
  <div class="actions">
    <%= link_to 'Stel de identiteit vast van deze Antorcha', new_identity_path %>
  </div>
<% end %>

